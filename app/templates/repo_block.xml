<?xml version="1.0" encoding="UTF-8"?>
<mustache>
  <script id="repo_block" type="text/template"><![CDATA[
    <div>
      <div class="col-md-12 repo_panel">
        <div class="col-md-6 repo_left">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                <a href="javascript:void(0);" class="show_repo" rel="{{id}}">
                  {{name}}
                </a>
                <span class="text-right pull-right">
                  <span class="repo_header_picto">
                    <span class="glyphicon glyphicon-eye-open"> </span>
                    {{watchers}}
                  </span>
                  <span class="repo_header_picto">
                    <i class="fa fa-code-fork"></i>
                    {{forks}}
                  </span>
                  <span class="repo_header_picto">
                    <span class="glyphicon glyphicon-star"> </span>
                    {{stargazers_count}}
                  </span>
                </span>
              </h3>
            </div>
            <div class="panel-body">
              {{description}}
            </div>
          </div>
        </div>
        <div class="col-md-6 repo_right">
          Created by <i>{{owner.login}}</i><br />
          Last update : {{updated_at}}
          <hr />
        </div>
      </div>
    </div>
  ]]></script>
</mustache>
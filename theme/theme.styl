.repo_panel {
  .repo_left
  .repo_right {
    transition: all 0.3s ease-in-out;
  }

  .repo_header_picto {
    margin-left: 10px;
    display: inline-block;
  }

  .repo_left {
    margin-left: 0px;
  }
  .repo_right {
    opacity: 0;
    margin-left: -50px;
  }
  &:hover {
    .repo_left {
      margin-left:-50px;
    }
    .repo_right {
      opacity: 1;
      margin-left: 50px;
    }
  }
}